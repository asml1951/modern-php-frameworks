{% extends 'base.html.twig'%}

{% block title %} Latest News
{% endblock %}


{% block content %}
    {{ form(form) }}
  <h1>Последние новости</h1>

    {% for article in articles %}
        <article>
        <p><h2> {{ article.rubric }} : {{ article.title }}</h2></p>
            <p> <h3> Автор: {{ article.author.name }} e-mail: {{ article.author.email }}</h3></p>
        <p><h3> {{ article.subtitle }}</h3></p>
        <p>{{ article.content }}</p>
        </article>
    {% endfor %}
{% endblock %}

{% block footer %}
 <div>Сегодня {{ date }}</div>
{% endblock %}
